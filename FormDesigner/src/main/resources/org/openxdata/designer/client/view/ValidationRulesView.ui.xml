<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:org.openxdata.designer.client.widget.skiprule">

	<ui:style>
		.rightPaddedLabel {
			padding-right: 3;	
		}
		
		.leftPaddedLabel {
			padding-left: 3;
		}
	</ui:style>

	<g:VerticalPanel spacing="5">
		
		<g:HorizontalPanel ui:field="questionTextPanel">
			<g:Label ui:field="lblQuestionLabel" addStyleNames="{style.rightPaddedLabel}" />
			<g:Label ui:field="lblQuestionText" />
		</g:HorizontalPanel>
		
		<g:HorizontalPanel ui:field="horizontalPanel">
			<g:Label ui:field="lblMustMeet" addStyleNames="{style.rightPaddedLabel}" />
			<my:GroupOperationWidget ui:field="groupHyperlink" />
			<g:Label ui:field="lblOfTheFollowing" addStyleNames="{style.leftPaddedLabel}" />
		</g:HorizontalPanel>
		
		<g:VerticalPanel ui:field="conditionsPanel" spacing="2" />
		
		<g:Button ui:field="btnAddCondition" />
		
		<g:HorizontalPanel ui:field="actionPanel">
			<g:Label ui:field="lblErrorMsg" addStyleNames="{style.rightPaddedLabel}" />
			<g:TextBox ui:field="txtErrorMessage" width="100%" />
		</g:HorizontalPanel>
	
	</g:VerticalPanel>
	
</ui:UiBinder> 